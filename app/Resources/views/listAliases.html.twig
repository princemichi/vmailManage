{# app/Resources/views/listAliases.html.twig #}
{{ include('base.html.twig') }}

<script src="{{ asset('js/main.js') }}"></script>


<h1>List aliases</h1>

<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search..."><br/>

<table id="mySort" class="tablesorter">
    <thead>
    <tr>
        <th align="right">Source Name</th>
        <th>@</th>
        <th align="left">Source Sever</th>
		<th>fwd</th>
		<th align="right">Destination Name</th>
		<th>@</th>
		<th align="left">Destination Sever</th>
        <th>Enabled</th>
        <th>Action</th>

    </tr>
    </thead>
    <tbody id="myTable" class="tablesorter">
    {% for item in aliases %}
        <tr>
            <td align="right">{{ item.source_username }}</td>
            <td>@</td>
            <td>{{ item.source_domain }}</td>
            <td align="center">>>></td>
            <td align="right">{{ item.destination_username }}</td>
            <td>@</td>
            <td>{{ item.destination_domain }}</td>
            <td>{% if item.enabled %} yes {% else %} no {% endif %}</td>
            <td>
                <a href="{{ item.id }}">edit</a>
                <a href="#" onclick="confirmAction('{{ item.source_username }}@{{ item.source_domain }}', 'delete/{{ item.id }}');">delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <td colspan="8"></td>
        <td><a href="new">+ new</a></td>
    </tr>
    </tfoot>
</table>

{{ include('base_bottom.html.twig') }}
